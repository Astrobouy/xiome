
extends _templates/_page.pug

block append variables
	- pageName = "components"
	- pageSubtitle = "components"

block append head
	script(async defer src=`${base}/demos.bundle.min.js`)

block maincontent
	.page
		.explainer
			h2 browse for components you'd like to plug into your website
			p to install a component, copy the green html code into your website's html &lt;body&gt; section
		ol.componentgrid
			li
				.summary
					h3
						span my account
						span  component
					p this component allows users to edit their profile
					code.htmlcode.codeblock=`<xiome-login-panel show-logout>\n\t<xiome-my-account></xiome-my-account>\n</xiome-login-panel>`
				.demo
					demo-xiome-login-panel(show-logout)
						demo-xiome-my-account
			li
				.summary
					h3
						span questions
						span  component
					p a community board where users can post questions
					code.htmlcode.codeblock=`<xiome-login-panel>\n\t<xiome-questions board="default"></xiome-questions>\n</xiome-login-panel>`
				.demo
					demo-xiome-login-panel
						demo-xiome-questions
			li
				.summary
					h3
						span manage users
						span  component
					p admins can ban naughty users with this handy search widget
					code.htmlcode.codeblock=`<xiome-manage-users></xiome-manage-users>`
				.demo
					demo-xiome-manage-users
			li
				.summary
					h3
						span permissions
						span  component
					p admins can setup advanced roles and privileges
					code.htmlcode.codeblock=`<xiome-permissions></xiome-permissions>`
				.demo
					demo-xiome-permissions
		h2.note
			p more components coming soon
