
extends _templates/_page.pug

block append variables
	- pageName = "learn"
	- pageSubtitle = ""

block maincontent
	.page.content

		.segment.twoside
			.text
				h2 build your community#[br]with open source components
				ul
					li 📝 comments, forums, and questions boards
					li 💰 premium memberships for your audience
					li 📺 offer private livestreams and video content
			.art
				//- tabler icons "social"
				<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-social" width="44" height="44" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
					<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
					<circle cx="12" cy="5" r="2" />
					<circle cx="5" cy="19" r="2" />
					<circle cx="19" cy="19" r="2" />
					<circle cx="12" cy="14" r="3" />
					<line x1="12" y1="7" x2="12" y2="11" />
					<line x1="6.7" y1="17.8" x2="9.5" y2="15.8" />
					<line x1="17.3" y1="17.8" x2="14.5" y2="15.8" />
				</svg>
				//- feather icon "layers"
				//- feather icon "grid"
				//- tabler icons "apps"

		.segment.twoside.flip
			.text
				h2 copy-and-paste html to install
				ul
					li xiome components are compatible with nearly any website
				ol
					li create your community on the #[a(href=`${base}/setup`) setup page] and connect your website
					li browse for plugins on the #[a(href=`${base}/components`) components page] and copy-paste away!
			.art
				//- akar icons "copy"
				<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" focusable="false" width="1em" height="1em" style="-ms-transform: rotate(360deg); -webkit-transform: rotate(360deg); transform: rotate(360deg);" preserveAspectRatio="xMidYMid meet" viewBox="0 0 24 24"><g fill="none"><path d="M8 4v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V7.242a2 2 0 0 0-.602-1.43L16.083 2.57A2 2 0 0 0 14.685 2H10a2 2 0 0 0-2 2z" stroke="currentColor" stroke-width="1" stroke-linecap="round"/><path d="M16 18v2a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V9a2 2 0 0 1 2-2h2" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"/></g></svg>

		.segment.twoside
			.text
				h2 sell memberships to your audience
				ul
					li xiome cloud charges a 9% fee to facilitate payments
					li you don't have to use xiome cloud payments, it's a convenience
					li you can host your own payment system, or just go without payments and use xiome components for free communities
			.art
				//- tabler icons "businessplan"
				<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-businessplan" width="44" height="44" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
					<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
						<ellipse cx="16" cy="6" rx="5" ry="3" />
					<path d="M11 6v4c0 1.657 2.239 3 5 3s5 -1.343 5 -3v-4" />
					<path d="M11 10v4c0 1.657 2.239 3 5 3s5 -1.343 5 -3v-4" />
					<path d="M11 14v4c0 1.657 2.239 3 5 3s5 -1.343 5 -3v-4" />
					<path d="M7 9h-2.5a1.5 1.5 0 0 0 0 3h1a1.5 1.5 0 0 1 0 3h-2.5" />
					<path d="M5 15v1m0 -8v1" />
				</svg>
				//- grommet icons "money"

		.segment.twoside.flip 
			.text
				h2 xiome is fully open source 💖
				ul
					li if you're a developer, xiome's login system and components can jumpstart your websites and apps
					li collaborate with us to make xiome a better open source platform for everybody to share
			.art
				//- tabler icons "brand-open-source"
				<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" focusable="false" width="1em" height="1em" style="-ms-transform: rotate(360deg); -webkit-transform: rotate(360deg); transform: rotate(360deg);" preserveAspectRatio="xMidYMid meet" viewBox="0 0 24 24"><path d="M12 3a9 9 0 0 1 3.618 17.243l-2.193-5.602a3 3 0 1 0-2.849 0l-2.193 5.603A9 9 0 0 1 12 3z" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"/></svg>
