
doctype html

block variables
	- let base = "."
	- let pageSubtitle

head
	meta(charset="utf-8")
	meta(name="viewport" content="width=device-width,initial-scale=1")
	title xiome mocksite

	script(defer type="importmap-shim" src=`${base}/../importmap.json`)
	script(async defer type="module-shim" src=`${base}/../xiome.js`)
	script(async defer src="https://unpkg.com/es-module-shims@0.9.0/dist/es-module-shims.js")

	xiome-config(mock="app")

