
doctype html

block variables
	- let base = ".."
	- let pageSubtitle

head
	meta(charset="utf-8")
	meta(name="viewport" content="width=device-width,initial-scale=1")
	title xiome mocksite

	script(defer type="importmap-shim" src=`${base}/importmap.json`)
	script(async defer type="module-shim" src=`${base}/xiome-mock.js`)
	script(async defer type="module-shim" src=`${base}/features/xio-components/playground.js`)
	script(async defer src=`${base}/../node_modules/es-module-shims/dist/es-module-shims.js`)

	xiome-mock(mode="app")

