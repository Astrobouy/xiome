
doctype html

block variables
	- let base = ".."
	- let pageSubtitle

head
	meta(charset="utf-8")
	meta(name="viewport" content="width=device-width,initial-scale=1")
	title xiome mocksite

	if mode === "mock"
		xiome-mock(mode="app")
		script(defer type="importmap-shim" src=`${base}/importmap.json`)
		script(defer type="module-shim" src=`${base}/xiome-mock.js`)
		script(defer type="module-shim" src=`${base}/features/xio-components/playground.js`)
		script(defer src=`${base}/../node_modules/es-module-shims/dist/es-module-shims.js`)

	else if mode === "local"
		xiome-config(
			app="e649313e810efb98163dcd1318b115b24432fa64f089f1cee8625196f129accc"
			platform="http://localhost:5000"
			api="http://localhost:8000"
		)
		script(defer type="importmap-shim" src=`${base}/importmap.json`)
		script(defer type="module-shim" src=`${base}/xiome.js`)
		script(defer type="module-shim" src=`${base}/features/xio-components/playground.js`)
		script(defer src=`${base}/../node_modules/es-module-shims/dist/es-module-shims.js`)

	style.
		* {
			margin: 0;
			padding: 0;
		}
		html, body {
			color: #999;
			background: #333;
		}
		body {
			padding: 1em;
		}
		h1, h2 {
			opacity: 0.4;
		}
		h1 {
			font-size: 4em;
		}
		h2 {
			font-size: 3em;
			margin-top: 1em;
			margin-bottom: 0.5em;
		}

