	style.
		* {
			margin: 0;
			padding: 0;
		}
		html, body {
			background: #333;
			color: #999;
		}
		body {
			padding: 1em;
		}
		xiome-login-panel > section {
			margin-top: 1.5em;
		}
		h1, h2 {
			opacity: 0.4;
		}
		h1 {
			font-size: 4em;
		}
		h2 {
			font-size: 3em;
		}

h1 mock site
xiome-login-panel(show-logout)

	section
		h2 manage users
		xiome-manage-users

	section
